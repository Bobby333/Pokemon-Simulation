@model IEnumerable<PokemonSimulation.Models.Abilitys>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ability_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ability_Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ability_Boost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ability_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ability_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ability_Boost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Ability">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Ability">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Ability">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
